<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>LoginApp</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Hello <%= user.firstname %>!</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-8 col-sm-offset-2">
			<div class="well text-center">
				<h3><span class="fa fa-user"></span> Profile Info</h3>

					<p>
						<strong>email</strong>: <%= user.email %><br>
						<strong>password</strong>: <%= user.password %><br>
						<strong>firstname</strong>: <%= user.firstname %><br>
						<strong>lastname</strong>: <%= user.lastname %><br>
						<strong>country</strong>: <%= user.country %><br>
					</p>

			</div>
		</div>

	</div>

</div>
</body>
</html>
